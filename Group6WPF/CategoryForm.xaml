<Window x:Class="Group6WPF.CategoryForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group6WPF"
        mc:Ignorable="d"
        Title="Category Form" Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F7F8FA">

    <Grid Background="#F7F8FA">
        <Border Width="500" Padding="30" Background="White" CornerRadius="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.18"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Category Details" FontSize="24" FontWeight="Bold" Foreground="#4B5CF0" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Name -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Name" FontWeight="SemiBold" FontSize="16"/>
                    <TextBox x:Name="txtName" Height="34"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Description" FontWeight="SemiBold" FontSize="16"/>
                    <TextBox x:Name="txtDescription" Height="34"/>
                </StackPanel>

                <!-- Picture Upload -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Picture:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPicture" Width="250" IsReadOnly="True" Margin="0,0,10,0"/>
                    <Button Content="Browse..." Click="BtnBrowsePicture_Click"/>
                </StackPanel>

                <!-- Image Preview -->
                <Image x:Name="imgPreview" Width="160" Height="160" Stretch="Uniform" Margin="0,10,0,10" HorizontalAlignment="Center"/>

                <!-- Active Checkbox -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <CheckBox x:Name="chkIsActive" Content="Is Active"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Save" Width="105" Height="40" Margin="0,0,10,0" Click="BtnSave_Click" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Cancel" Width="100" Height="40" Click="BtnCancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
