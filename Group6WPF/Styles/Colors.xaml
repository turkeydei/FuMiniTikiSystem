<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#FF189EFF</Color>
    <Color x:Key="AccentColor">#FFFFD700</Color>
    <Color x:Key="BackgroundColor">#FFF8F8F8</Color>
    <Color x:Key="TextColor">#FF333333</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />

    <SolidColorBrush x:Key="TikiBlue" Color="#1A94FF"/>
    <SolidColorBrush x:Key="TikiOrange" Color="#FDD835"/>
    <SolidColorBrush x:Key="TikiRed" Color="#FF424E"/>
    <SolidColorBrush x:Key="TikiGreen" Color="#00AB56"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#242424"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#808089"/>
    <SolidColorBrush x:Key="BorderColor" Color="#EBEBF0"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5FA"/>
</ResourceDictionary>
