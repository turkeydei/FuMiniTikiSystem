<Window x:Class="Group6WPF.ProductMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group6WPF"
        mc:Ignorable="d"
        Title="FUMiniTiki" Height="800" Width="1500"
        Background="#F5F5FA"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <DockPanel Width="1200" HorizontalAlignment="Center" Background="White">

        <!-- HEADER -->
        <Border DockPanel.Dock="Top" Height="70" Background="White" BorderBrush="#EBEBF0" BorderThickness="0,0,0,1">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo as a button -->
                <Button Grid.Column="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    ToolTip="Back to Home"
                    Click="LogoButton_Click"
                    Margin="20,0,10,0"
                    Width="110"
                    Height="40">
                    <Image Source="Assets/tiki.png" Stretch="Uniform"/>
                </Button>

                <!-- Search -->
                <Border Grid.Column="1" Height="40" Margin="20,0" VerticalAlignment="Center"
Background="#F8F8FF" BorderBrush="{StaticResource BorderColor}" 
BorderThickness="1" CornerRadius="8">
                    <TextBox x:Name="SearchTextBox" Height="38" Padding="15,0" FontSize="14" BorderThickness="0"
     Background="Transparent" VerticalAlignment="Center"
     Text="Search product by name..."
     Foreground="{StaticResource TextSecondary}" LostFocus="SearchTextBox_LostFocus" GotFocus="SearchTextBox_GotFocus" KeyDown="SearchTextBox_KeyDown"/>
                </Border>

                <!-- Account Icon -->
                <Button x:Name="btnProfile" Grid.Column="3" Margin="10,5,0,5" Width="40" Height="40"
                        Background="Transparent" BorderThickness="0" ToolTip="Account"
                        Cursor="Hand" HorizontalAlignment="Left" Click="btnProfile_Click">
                    <Image Source="Assets/account.png" Stretch="Uniform"/>
                </Button>

                <!-- Cart Icon -->
                <Grid Grid.Column="4" Margin="10,0">
                    <Button x:Name="btnViewCart" Width="40" Height="40"
                Background="Transparent" BorderThickness="0" ToolTip="Shopping Cart"
                Cursor="Hand" Click="btnViewCart_Click">
                        <Image Source="Assets/cart.png" Stretch="Uniform"/>
                    </Button>

                    <!-- Cart Count Badge -->
                    <Border x:Name="CartBadge" 
                Width="20" Height="20" 
                CornerRadius="10"
                Background="#FF424E"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="0,-5,-5,0"
                Visibility="Collapsed">
                        <TextBlock x:Name="CartCountText" 
                       Text="0" 
                       Foreground="White" 
                       FontSize="10" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <Button x:Name="BackButton"
         Content="← Back"
         Width="100"
         Height="35"
         Margin="25,0,0,650"
         Background="#E0E0E0"
         Foreground="#333"
         FontWeight="Bold"
         Click="BackButton_Click"/>

        <!-- MAIN CONTENT AREA -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="30,20,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: Product Image -->
                <Border Grid.Column="0" Background="White" CornerRadius="12" 
                        BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                        Margin="0,0,20,385">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" 
                                        Opacity="0.1" BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Image x:Name="ProductImage" Stretch="Uniform" Margin="20"
                               MaxHeight="400"/>
                    </Grid>
                </Border>

                <!-- MIDDLE: Product Details -->
                <StackPanel Grid.Column="1" Margin="20,0,20,0" VerticalAlignment="Top" Height="479">
                    <!-- Product Name -->
                    <TextBlock x:Name="ProductNameTextBlock"
                              FontSize="24" FontWeight="Bold"
                              Foreground="{StaticResource TextPrimary}" 
                              TextWrapping="Wrap"
                              LineHeight="32"
                              Margin="0,0,0,15"/>

                    <!-- Rating and Reviews -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                            <TextBlock Text="⭐⭐⭐⭐⭐" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="4.8" FontWeight="SemiBold" Margin="5,0" 
                                      VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}"/>
                        </StackPanel>
                        <TextBlock Text="(2.1k reviews)" Foreground="{StaticResource TextSecondary}" 
                                  VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Text="Sold 500+" Foreground="{StaticResource TextSecondary}" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Price Section -->
                    <Border Background="#FFF8E1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock x:Name="ProductPriceTextBlock"
                                          FontSize="28" FontWeight="Bold"
                                          Foreground="{StaticResource TikiRed}"
                                          VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Product Description -->
                    <TextBlock Text="Product Description" FontWeight="SemiBold" FontSize="16" 
                              Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                    <TextBlock x:Name="ProductDescriptionTextBlock"
                              TextWrapping="Wrap" FontSize="14" LineHeight="22"
                              Foreground="{StaticResource TextSecondary}" 
                              Margin="0,0,0,20"/>

                    <!-- Product Features -->
                    <Border Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderColor}" 
                           BorderThickness="1" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Outstanding Features" FontWeight="SemiBold" FontSize="16" 
                                      Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="✓" Foreground="{StaticResource TikiGreen}" 
                                              FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="High quality, genuine warranty" 
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="✓" Foreground="{StaticResource TikiGreen}" 
                                              FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="Fast nationwide delivery" 
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="✓" Foreground="{StaticResource TikiGreen}" 
                                              FontWeight="Bold" Margin="0,0,8,0"/>
                                    <TextBlock Text="30-day return policy" 
                                              Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </StackPanel>

                <!-- RIGHT: Purchase Section -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" 
                       BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                       VerticalAlignment="Top" Margin="20,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="2" 
                                        Opacity="0.1" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel Margin="20" VerticalAlignment="Top">

                        <!-- Quantity Selection -->
                        <TextBlock Text="Quantity" FontWeight="SemiBold" FontSize="16" 
                                  Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                            <Button x:Name="DecreaseButton" Content="−" Width="40" Height="40"
                                   Style="{StaticResource QuantityButtonStyle}"/>
                            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1,1,1,1" 
                                   CornerRadius="0" Background="White">
                                <TextBox x:Name="QuantityTextBox" Text="1" Width="60" Height="38"
                                        TextAlignment="Center" FontSize="16" FontWeight="SemiBold"
                                        BorderThickness="0" Background="Transparent"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Button x:Name="IncreaseButton" Content="+" Width="40" Height="40"
                                   Style="{StaticResource QuantityButtonStyle}"/>
                        </StackPanel>

                        <!-- Total Price -->
                        <Border Background="#FFF8E1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Total:" FontSize="14" 
                                          Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TotalPriceTextBlock"
                                          FontSize="24" FontWeight="Bold"
                                          Foreground="{StaticResource TikiRed}"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <Button x:Name="BuyNowButton" Content="Buy Now" 
                               Style="{StaticResource ModernButtonStyle}"
                               Background="{StaticResource TikiRed}"
                               Margin="0,0,0,10" Height="48" FontSize="16"/>

                        <Button x:Name="AddToCartButton" Content="Add to Cart" 
                               Style="{StaticResource ModernButtonStyle}"
                               Background="Transparent" 
                               Foreground="{StaticResource TikiBlue}"
                               BorderBrush="{StaticResource TikiBlue}" 
                               BorderThickness="2" Height="48" FontSize="16"/>

                        <!-- Additional Info -->
                        <StackPanel Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Text="🛡️" FontSize="14" VerticalAlignment="Center"/>
                                <TextBlock Text="12-month warranty" FontSize="12" 
                                          Foreground="{StaticResource TextSecondary}" Margin="8,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Text="↩️" FontSize="14" VerticalAlignment="Center"/>
                                <TextBlock Text="15-day return policy" FontSize="12" 
                                          Foreground="{StaticResource TextSecondary}" Margin="8,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,8">
                                <TextBlock Text="⚡" FontSize="14" VerticalAlignment="Center"/>
                                <TextBlock Text="Fast delivery within 2 hours" FontSize="12" 
                                          Foreground="{StaticResource TextSecondary}" Margin="8,0"/>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </Grid>
        </ScrollViewer>

    </DockPanel>
</Window>