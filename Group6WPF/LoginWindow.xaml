<Window x:Class="Group6WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group6WPF"
        mc:Ignorable="d"
        Title="Login - FUMiniTiki" Height="500" Width="500"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Loaded="Window_Loaded">

    <Grid>
        <!-- Card Container -->
        <Border Width="400" Height="360"
                Background="White"
                CornerRadius="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="3"
                                  Opacity="0.3"/>
            </Border.Effect>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Email Label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Email TextBox -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password Label -->
                    <RowDefinition Height="Auto"/>
                    <!-- PasswordBox -->
                    <RowDefinition Height="Auto"/>
                    <!-- Button -->
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Login"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email Label -->
                <TextBlock Text="Email"
                           Grid.Row="1"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <!-- Email Input -->
                <TextBox x:Name="txtEmail"
                         Grid.Row="2"
                         Height="34"
                         Margin="0,0,0,15"
                         HorizontalAlignment="Stretch"/>

                <!-- Password Label -->
                <TextBlock Text="Password"
                           Grid.Row="3"
                           FontWeight="SemiBold"
                           Margin="0,0,0,5"/>

                <!-- Password Input -->
                <PasswordBox x:Name="txtPassword"
                             Grid.Row="4"
                             Height="34"
                             Margin="0,0,0,15"
                             HorizontalAlignment="Stretch"/>

                <!-- Login Button -->
                <Button x:Name="btnLogin"
                        Grid.Row="5"
                        Content="Login"
                        Height="40"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        HorizontalAlignment="Stretch"
                        Click="btnLogin_Click"/>
                <Button x:Name="btnSignUp"
                        Grid.Row="5"
                        Content="Sign Up"
                        Height="40"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand" Margin="5,63,5,-53" Click="btnSignUp_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
