<Window x:Class="Group6WPF.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group6WPF"
        mc:Ignorable="d"
        Title="Product Detail" Height="800" Width="700"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Loaded="Window_Loaded">

    <Grid Background="#F7F8FA">
        <Border Width="500" Padding="30" Background="White" CornerRadius="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.18"/>
            </Border.Effect>
            <StackPanel>
                <Button x:Name="btnBackToAdmin" Content="← Back to Admin" Width="160" Height="34" Background="#2196F3" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                <TextBlock Text="Product Details" FontSize="28" FontWeight="Bold" Foreground="#4B5CF0" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Product Name" FontWeight="SemiBold" FontSize="16"/>
                    <TextBox x:Name="txtProductName" Height="34"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Description" FontWeight="SemiBold" FontSize="16"/>
                    <TextBox x:Name="txtDescription" Height="34"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Price" FontWeight="SemiBold" FontSize="16"/>
                    <TextBox x:Name="txtPrice" Height="34"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Category" FontWeight="SemiBold" FontSize="16"/>
                    <ComboBox x:Name="cbCategory" Height="34" DisplayMemberPath="Name" SelectedValuePath="CategoryID"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Image:" Width="80" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtPicture" Width="250" IsReadOnly="True" Margin="0,0,10,0"/>
                    <Button Content="Browse..." Click="BtnBrowsePicture_Click"/>
                </StackPanel>
                <Image x:Name="imgPreview" Width="160" Height="160" Stretch="Uniform" Margin="0,10,0,0" HorizontalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="btnSave" Content="Save" Width="120" Height="38" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
